<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissible" >
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <!--<h2><%= pluralize(event.errors.count, "error") %> in your input:</h2>-->

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :name %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :description %>
    </div>
    <div class="col-sm-10">
      <%= form.text_area :description, :size => "30x5" %>
    </div>
  </div>

  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :date %>
      <%= form.label :date, "(MM/DD/YYYY)" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :date %>
    </div>
  </div>

  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :start_time %>
      <%= form.label :start_time, "(XX:XX)" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :start_time %>
    </div>
  </div>

  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :end_time %>
      <%= form.label :end_time, "(XX:XX)" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :end_time %>
    </div>
  </div>

  <div class="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.label :link %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :link %>
    </div>
  </div>

  <div clas
       s="field row my-2 pt-2" >
    <div class="col-sm-2">
      <%= form.submit %>
    </div>

  </div>


<% end %>
